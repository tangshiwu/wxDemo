/**index.wxss**/
.item-detail:nth-child(1) {
  border-top: solid 1px #c7c6c6;
}
.item-detail {
  width: 100%;
  min-height: 85px;
  display: flex;
  padding: 10px 5px;
  border-bottom: solid 1px #c7c6c6;
}
.item-info {
  display: inline-block;
  vertical-align: top;
  height: 100%;
  flex: 1;
  padding-left: 5px;
}
.itemName {
  font-size: 14px;
  line-height: 25px;
  font-weight: bold;
}
.info-detail {
  font-size: 13px;
  line-height: 20px;
  color: #5a5a5a;
}
.buy-btn {
  width: 50px;
}