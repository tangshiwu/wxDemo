/* pages/user/user.wxss */
.container {
  height: 100vh;
  background-color: #f7f7f7;
}
.user-photo {
  width: 100%;
  height: 140px;
  background-color: #f37160;
  line-height: 140px;
  padding-left: 10px;
}
.default-img {
  width: 50px;
  height: 50px;
  vertical-align: middle;
}
.user-name {
  padding-left: 10px;
  color: #fff;
  font-size: 15px;
  font-weight: bold;
}
.user-content {
  width: 100%;
  background-color: #fff;
  padding: 0 12px;
  box-sizing: border-box;
}
.list-item {
  border-bottom: #dfdddd 1px solid;
  height: 40px;
  line-height: 40px;
  font-size: 13px;
}
.list-item:nth-last-child(1) {
  border: none;
}
.ver-text {
  position: absolute;
  bottom: 10px;
  text-align: center;
  font-size: 11px;
  left: 50%;
  transform: translateX(-50%);
}